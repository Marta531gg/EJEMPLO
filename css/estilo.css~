/* Cambiar el color de todos los enlaces */
a {
    color: #0B0909; /* Color negro */
    text-decoration: none; /* Elimina el subrayado por defecto */
}

/* Cambiar el color de los enlaces dentro del formulario */
.form-color a {
    color: #000000; /* Color negro */
}

/* Cambiar el color del enlace cuando se pasa el cursor por encima */
a:hover {
    color: #333333; /* Un gris oscuro cuando el cursor pasa sobre el enlace */
    text-decoration: underline; /* Opcional: subraya el enlace al pasar el cursor */
}

/* Cambiar el color de los íconos dentro de los enlaces, si usas FontAwesome */
a i {
    color: #000000; /* Color negro para los íconos */
}


